/* miniprogram/pages/profile/profile.wxss */
page {
  background-color: #f8f9fa;
}

.profile-page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
}

/* Toast */
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #22c55e; /* green-500 */
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  z-index: 50;
  font-size: 28rpx;
  text-align: center;
}

/* Profile Header */
.profile-header-section {
  background-color: #fff;
  padding-bottom: 20rpx; /* pb-5 */
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05); /* shadow-sm */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profile-header-content {
  padding: 16rpx; /* p-4 */
  padding-top: 24rpx; /* pt-6 */
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%; /* Ensure it takes full width for centering */
}

.avatar {
  height: 192rpx; /* h-24 */
  width: 192rpx; /* w-24 */
  border-radius: 50%; /* rounded-full */
  object-fit: cover; /* object-cover */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1); /* shadow-md */
}

.username {
  margin-top: 16rpx; /* mt-4 */
  font-size: 48rpx; /* text-2xl */
  font-weight: bold; /* font-bold */
  color: #1f2937; /* gray-800 */
}

.edit-button {
  margin-top: 12rpx; /* mt-3 */
  background-color: #e5e7eb; /* gray-200 */
  color: #1f2937; /* gray-800 */
  font-weight: 600; /* font-semibold */
  padding: 6rpx 20rpx; /* py-1.5 px-5 */
  border-radius: 9999rpx; /* rounded-full */
  font-size: 28rpx; /* text-sm */
  transition-property: background-color; /* transition-colors */
  transition-duration: 200ms; /* duration-200 */
  line-height: 1.5; /* Adjust line-height for button text */
  height: auto; /* Allow button to size based on content */
}

.edit-button:active {
  background-color: #d1d5db; /* hover:bg-gray-300 */
}

.content-area {
  width: 100%;
  padding: 16rpx; /* p-4 */
  box-sizing: border-box; /* Ensure padding is included in width */
}

/* Display Mode */
.card {
  background-color: #fff;
  padding: 24rpx; /* p-6 */
  border-radius: 16rpx; /* rounded-lg */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1); /* shadow-md */
}

.preview-area {
  /* min-height: 400rpx; Removed */
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

/* --- Edit Mode --- */
.edit-mode-active {
  /* Add padding to the bottom of the page to make space for the sticky button group */
  /* The value should be roughly the height of the button group + some extra space */
  padding-bottom: 180rpx;
}

.profile-markdown-editor {
  width: 100%;
  border: 2rpx solid #d1d5db; /* border border-gray-300 */
  border-radius: 12rpx; /* rounded-md */
  min-height: 600rpx; /* Set a minimum height */
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box; /* Include padding in width/height */
  padding: 24rpx;
}

.profile-markdown-editor:focus {
  border-color: #3b82f6; /* focus:ring-blue-500 focus:border-blue-500 */
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.25); /* focus ring effect */
}

.sticky-button-group {
  position: fixed;
  bottom: 40rpx; /* Consistent position */
  left: 40rpx;
  width: 100%;
  display: flex;
  gap: 16rpx;
  padding: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box; /* Ensure padding is included in the width */
  z-index: 100; /* Ensure it's on top of other content */
}

.cancel-button, .save-button {
  width: 50%; /* w-1/2 */
  font-weight: bold; /* font-bold */
  padding: 12rpx 0; /* py-3 */
  border-radius: 12rpx; /* rounded-lg */
  transition-property: background-color; /* transition-colors */
  transition-duration: 200ms; /* duration-200 */
  font-size: 32rpx;
  line-height: 1.5;
  height: auto;
}

.cancel-button {
  background-color: #6b7280; /* gray-500 */
  color: #fff;
}

.cancel-button:active {
  background-color: #4b5563; /* hover:bg-gray-600 */
}

.save-button {
  background-color: #16a34a; /* green-600 */
  color: #fff;
}

.save-button:active {
  background-color: #15803d; /* hover:bg-green-700 */
}