/* pages/opportunities/opportunities.wxss */
page {
  background-color: #f8f9fa;
}

.page-container {
  padding: 20rpx;
  padding-bottom: 200rpx; /* Add padding to avoid FAB overlap */
}

/* --- Empty State --- */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 30vh;
  color: #9ca3af; /* gray-400 */
}

.empty-text {
  font-size: 40rpx;
  font-weight: 500;
}

.empty-subtext {
  margin-top: 16rpx;
  font-size: 28rpx;
}

/* --- Opportunities List --- */
.opportunities-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.opportunity-card {
  border-radius: 16rpx;
  padding-left: 8rpx; /* Creates the thick border effect */
  background-color: #9ca3af; /* Default border color */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s, box-shadow 0.2s;
}

.opportunity-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
}

/* Set border color based on status */
.opportunity-card[data-status="已投递"] { background-color: #eab308; } /* yellow-500 */
.opportunity-card[data-status="面试中"] { background-color: #3b82f6; } /* blue-500 */
.opportunity-card[data-status="已发Offer"] { background-color: #22c55e; } /* green-500 */
.opportunity-card[data-status="已结束"] { background-color: #6b7280; } /* gray-500 */

.card-content {
  background-color: #fff;
  border-radius: 12rpx; /* Inner radius */
  padding: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.position-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937; /* gray-800 */
}

.company-name {
  font-size: 30rpx;
  color: #4b5563; /* gray-600 */
  margin-bottom: 20rpx;
}

.card-footer {
  border-top: 1rpx solid #f3f4f6; /* gray-100 */
  padding-top: 16rpx;
}

.footer-text {
  font-size: 26rpx;
  color: #6b7280; /* gray-500 */
}

/* --- Status Badge (New Style) --- */
.status-badge {
  padding: 6rpx 16rpx;
  border-radius: 9999rpx;
  font-size: 24rpx;
  font-weight: 600; /* Bolder font */
}

.status-badge[data-status="已投递"] {
  background-color: #fef9c3; /* yellow-100 */
  color: #854d0e; /* yellow-800 */
}

.status-badge[data-status="面试中"] {
  background-color: #dbeafe; /* blue-100 */
  color: #1e40af; /* blue-800 */
}

.status-badge[data-status="已发Offer"] {
  background-color: #dcfce7; /* green-100 */
  color: #166534; /* green-800 */
}

.status-badge[data-status="已结束"] {
  background-color: #f3f4f6; /* gray-100 */
  color: #1f2937; /* gray-800 */
}

/* --- Centered Floating Action Button --- */
.fab-add-center {
  position: fixed;
  bottom: 5rpx; /* Closer to the tab bar */
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 100rpx;
  background-color: #16a34a; /* green-600 */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  color: #fff;
  z-index: 10;
}

.fab-add-center:active {
  background-color: #15803d; /* green-700 */
}

.fab-icon {
  font-size: 60rpx;
  font-weight: 300;
  line-height: 100rpx; /* Center the plus sign */
}

/* --- Add/Edit Modal --- */
.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-panel {
  width: 90%;
  max-width: 700rpx;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 12rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 16rpx 24rpx;
  min-height: 70rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 12rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.picker-view {
  width: 100%;
  padding: 0 24rpx;
  min-height: 70rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 12rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.form-textarea {
  width: 100%;
  padding: 16rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  min-height: 160rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #e5e7eb;
}

.modal-button {
  flex: 1;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border-radius: 0;
}

.modal-button.cancel {
  color: #4b5563;
  border-bottom-left-radius: 24rpx;
}

.modal-button.save {
  background-color: #16a34a;
  color: #fff;
  border-bottom-right-radius: 24rpx;
}

.modal-button::after {
  border: none; /* Remove default button borders */
}