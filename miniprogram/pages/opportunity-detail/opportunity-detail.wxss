/* pages/opportunity-detail/opportunity-detail.wxss */
page {
  background-color: #f8f9fa;
}

.page-container {
  display: flex;
  flex-direction: column;
}

/* --- Header --- */
.header-section {
  background-color: #fff;
  padding: 24rpx 32rpx;
  padding-top: 24rpx; /* Adjusted padding */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border-bottom: 1rpx solid #e5e7eb;
}

.position-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1f2937;
}

.company-name {
  font-size: 32rpx;
  color: #6b7280;
  margin-top: 8rpx;
}

/* --- AI Actions --- */
.actions-container {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding: 32rpx;
}

.action-card {
  background-color: #fff;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  transition: transform 0.2s, box-shadow 0.2s;
}

.action-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-card.resume {
  border-left: 8rpx solid #3b82f6; /* blue-500 */
}

.action-card.practice {
  border-left: 8rpx solid #8b5cf6; /* purple-500 */
}

.action-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.action-text {
  display: flex;
  flex-direction: column;
}

.action-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1f2937;
}

.action-subtitle {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

/* --- Tabs --- */
.tabs-container {
  padding: 0 32rpx;
}

.tab-bar {
  display: flex;
  white-space: nowrap;
  border-bottom: 2rpx solid #e5e7eb;
}

.tab-item {
  display: inline-block; /* Force horizontal layout */
  padding: 20rpx 0;
  margin-right: 48rpx;
  font-size: 28rpx;
  color: #6b7280;
  border-bottom: 4rpx solid transparent;
}

.tab-content-container {
  padding-top: 32rpx;
}

.card {
  background-color: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  min-height: 400rpx;
  font-size: 28rpx;
  line-height: 1.7;
}

.placeholder-card {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #9ca3af;
}

/* --- AI Analyze JD --- */
.analyze-jd-btn {
  margin-top: 32rpx;
  background-color: #3b82f6; /* blue-500 */
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  transition: background-color 0.2s;
}

.analyze-jd-btn:active {
  background-color: #2563eb; /* blue-600 */
}

.analyze-jd-btn[disabled] {
  background-color: #9ca3af; /* gray-400 */
  color: #e5e7eb;
}

.jd-analysis-results {
  margin-top: 40rpx;
}

.jd-keywords-analysis,
.resume-pre-match-analysis {
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.jd-keywords-analysis {
  background-color: #eff6ff; /* blue-50 */
}

.resume-pre-match-analysis {
  background-color: #f0fdf4; /* green-50 */
}

.analysis-title {
  display: block;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.jd-keywords-analysis .analysis-title {
  color: #1d4ed8; /* blue-800 */
}

.resume-pre-match-analysis .analysis-title {
  color: #166534; /* green-800 */
}

.keywords-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.keyword-tag {
  background-color: #dbeafe; /* blue-200 */
  color: #1e40af; /* blue-800 */
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 9999rpx;
}

.pre-match-text {
  font-size: 28rpx;
  color: #15803d; /* green-700 */
  line-height: 1.6;
}

/* --- Resume Tab Content --- */
.resume-content-container {
  display: flex;
  flex-direction: column;
}

.resume-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.resume-btn {
  background-color: #3b82f6; /* blue-500 */
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
}

.resume-btn.secondary {
  background-color: #e5e7eb; /* gray-200 */
  color: #374151;
}

.resume-preview {
  background-color: #f9fafb; /* gray-50 */
  border: 1rpx solid #e5e7eb;
  border-radius: 8rpx;
  padding: 24rpx;
}

.resume-editor {
  width: 100%;
  min-height: 600rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

/* --- Practice Overlay --- */
.practice-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #1f2937; /* Dark gray background */
  z-index: 2000;
  display: flex;
  flex-direction: column;
  color: #fff;
  padding: 40rpx;
  box-sizing: border-box;
}

.practice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.practice-status {
  font-size: 32rpx;
  font-weight: bold;
}

.close-practice-btn {
  font-size: 48rpx;
  font-weight: 300;
  padding: 10rpx;
}

.practice-main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.practice-question {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 80rpx;
  line-height: 1.4;
}

.practice-state-initial,
.practice-state-recording,
.practice-state-feedback {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.start-recording-btn,
.stop-recording-btn {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.start-recording-btn {
  background-color: #ef4444; /* red-500 */
}

.start-recording-btn .icon-image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 8rpx;
}

.practice-state-recording .recording-text {
  font-size: 36rpx;
  margin-bottom: 40rpx;
}

.practice-state-recording .timer {
  font-weight: bold;
  color: #3b82f6; /* blue-500 */
}

.stop-recording-btn {
  background-color: #6b7280; /* gray-500 */
  font-size: 60rpx;
}

.practice-state-feedback {
  width: 100%;
  max-width: 600rpx;
  background-color: #374151; /* gray-700 */
  padding: 32rpx;
  border-radius: 16rpx;
  text-align: left;
}

.feedback-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.user-answer-transcript {
  display: block;
  font-size: 28rpx;
  color: #d1d5db; /* gray-300 */
  background-color: #4b5563; /* gray-600 */
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  line-height: 1.6;
}

.ai-feedback-text {
  font-size: 28rpx;
  color: #a7f3d0; /* green-200 */
  line-height: 1.6;
}

.practice-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}

.show-answer-btn,
.next-question-btn {
  padding: 24rpx 40rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.show-answer-btn {
  background-color: #4b5563; /* gray-600 */
}

.next-question-btn {
  background-color: #3b82f6; /* blue-500 */
}

.next-question-btn.finish {
  background-color: #22c55e; /* green-500 */
}


/* --- Evaluation Report Tab Content --- */
.report-section {
  margin-bottom: 40rpx;
}

.score-display {
  font-size: 48rpx;
  font-weight: bold;
  color: #3b82f6; /* blue-500 */
}

.summary-cell .weui-label,
.radar-data-cell .weui-label {
  margin-bottom: 16rpx;
}

.report-summary-content,
.ai-feedback-content {
  background-color: #f9fafb; /* gray-50 */
  border: 1rpx solid #e5e7eb;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #374151;
}

.radar-data-text {
  display: block;
  background-color: #f9fafb; /* gray-50 */
  border: 1rpx solid #e5e7eb;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #374151;
  white-space: pre-wrap; /* Preserve newlines for formatted text */
}

/* --- Radar Chart-like Display --- */
.radar-chart-container {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f0f9ff; /* blue-50 */
  border-radius: 12rpx;
}

.radar-skill-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.radar-skill-item:last-child {
  margin-bottom: 0;
}

.skill-name {
  width: 160rpx;
  font-size: 26rpx;
  color: #374151; /* gray-700 */
  flex-shrink: 0;
}

.skill-bar-background {
  flex: 1;
  height: 20rpx;
  background-color: #e0e7ff; /* indigo-100 */
  border-radius: 10rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.skill-bar-fill {
  height: 100%;
  background-color: #6366f1; /* indigo-500 */
  border-radius: 10rpx;
  transition: width 0.5s ease-in-out;
}

.skill-score {
  position: absolute;
  right: 10rpx;
  font-size: 24rpx;
  color: #1e3a8a; /* indigo-900 */
  font-weight: bold;
}

.historical-session-item {
  position: relative; /* For positioning the arrow */
}

.historical-session-item .weui-cell__bd {
  padding-left: 40rpx; /* Make space for the arrow */
}

.active-indicator {
  position: absolute;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #3b82f6; /* Blue color for the arrow */
  font-size: 24rpx;
}

.historical-session-item.active {
  background-color: #e0e7ff; /* Light blue background for active state */
  border-left: 8rpx solid #3b82f6; /* Blue border for active state */
  padding-left: 24rpx; /* Adjust padding due to border */
}

.historical-session-item:active {
  background-color: #f0f0f0; /* Light gray background on tap */
  transform: scale(0.99); /* Slight scale down */
  transition: background-color 0.1s ease, transform 0.1s ease;
}

/* --- Q&A Tab Content --- */
.qa-controls {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.qa-btn {
  background-color: #3b82f6; /* blue-500 */
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
}

.qa-btn.add {
  background-color: #22c55e; /* green-500 */
}

.qa-btn.save {
  background-color: #3b82f6; /* blue-500 */
}

.qa-list-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.qa-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e5e7eb;
}

.qa-item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.question-input {
  flex: 1;
  min-height: 60rpx; /* Smaller min-height */
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  border-bottom: 2rpx solid #e5e7eb;
  padding-bottom: 8rpx;
  margin-right: 16rpx;
  line-height: 1.5;
}

.answer-input {
  width: 100%;
  min-height: 80rpx; /* Reduced min-height */
  border: 1rpx solid #d1d5db;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
  margin-top: 16rpx;
}

.delete-qa-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #ef4444; /* red-500 */
  background-color: #fef2f2; /* red-50 */
  border-radius: 50%;
  flex-shrink: 0;
}


/* --- Generic Modal Styles --- */
.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-panel {
  width: 90%;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.keyword-modal {
  max-width: 600rpx;
}

.modal-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.modal-body {
  padding: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 12rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 24rpx 16rpx;
  min-height: 70rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 12rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #e5e7eb;
}

.modal-button {
  flex: 1;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border-radius: 0;
}

.modal-button.cancel {
  color: #4b5563;
  border-bottom-left-radius: 24rpx;
}

.modal-button.save {
  background-color: #3b82f6; /* Blue for confirm */
  color: #fff;
  border-bottom-right-radius: 24rpx;
}

.modal-button::after {
  border: none; /* Remove default button borders */
}