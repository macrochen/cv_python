/* pages/opportunity-detail/opportunity-detail.wxss */
page {
  background-color: #f8f9fa;
}

.page-container {
  display: flex;
  flex-direction: column;
}

/* --- Header --- */
.header-section {
  background-color: #fff;
  padding: 24rpx 32rpx;
  padding-top: 24rpx; /* Adjusted padding */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border-bottom: 1rpx solid #e5e7eb;
}

.position-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1f2937;
}

.company-name {
  font-size: 32rpx;
  color: #6b7280;
  margin-top: 8rpx;
}

/* --- AI Actions --- */
.actions-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
  padding: 32rpx;
}

.action-card {
  background-color: #fff;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  transition: transform 0.2s, box-shadow 0.2s;
}

.action-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-card.resume {
  border-left: 8rpx solid #3b82f6; /* blue-500 */
}

.action-card.practice {
  border-left: 8rpx solid #8b5cf6; /* purple-500 */
}

.action-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.action-text {
  display: flex;
  flex-direction: column;
}

.action-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1f2937;
}

.action-subtitle {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

/* --- Tabs --- */
.tabs-container {
  padding: 0 32rpx;
}

.tab-bar {
  display: flex;
  white-space: nowrap;
  border-bottom: 2rpx solid #e5e7eb;
}

.tab-item {
  display: inline-block; /* Force horizontal layout */
  padding: 20rpx 0;
  margin-right: 48rpx;
  font-size: 28rpx;
  color: #6b7280;
  border-bottom: 4rpx solid transparent;
}

.tab-content-container {
  padding-top: 32rpx;
}

.card {
  background-color: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  min-height: 400rpx;
  font-size: 28rpx;
  line-height: 1.7;
}

.placeholder-card {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #9ca3af;
}

/* --- AI Analyze JD --- */
.analyze-jd-btn {
  margin-top: 32rpx;
  background-color: #3b82f6; /* blue-500 */
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  transition: background-color 0.2s;
}

.analyze-jd-btn:active {
  background-color: #2563eb; /* blue-600 */
}

.analyze-jd-btn[disabled] {
  background-color: #9ca3af; /* gray-400 */
  color: #e5e7eb;
}

.jd-analysis-results {
  margin-top: 40rpx;
}

.jd-keywords-analysis,
.resume-pre-match-analysis {
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.jd-keywords-analysis {
  background-color: #eff6ff; /* blue-50 */
}

.resume-pre-match-analysis {
  background-color: #f0fdf4; /* green-50 */
}

.analysis-title {
  display: block;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.jd-keywords-analysis .analysis-title {
  color: #1d4ed8; /* blue-800 */
}

.resume-pre-match-analysis .analysis-title {
  color: #166534; /* green-800 */
}

.keywords-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.keyword-tag {
  background-color: #dbeafe; /* blue-200 */
  color: #1e40af; /* blue-800 */
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 9999rpx;
}

.pre-match-text {
  font-size: 28rpx;
  color: #15803d; /* green-700 */
  line-height: 1.6;
}

/* --- Resume Tab Content --- */
.resume-content-container {
  display: flex;
  flex-direction: column;
}

.resume-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.resume-btn {
  background-color: #3b82f6; /* blue-500 */
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
}

.resume-btn.secondary {
  background-color: #e5e7eb; /* gray-200 */
  color: #374151;
}

.resume-preview {
  background-color: #f9fafb; /* gray-50 */
  border: 1rpx solid #e5e7eb;
  border-radius: 8rpx;
  padding: 24rpx;
}

/* --- Generic Modal Styles --- */
.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-panel {
  width: 90%;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.keyword-modal {
  max-width: 600rpx;
}

.modal-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.modal-body {
  padding: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 12rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 24rpx 16rpx;
  min-height: 70rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 12rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #e5e7eb;
}

.modal-button {
  flex: 1;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border-radius: 0;
}

.modal-button.cancel {
  color: #4b5563;
  border-bottom-left-radius: 24rpx;
}

.modal-button.save {
  background-color: #3b82f6; /* Blue for confirm */
  color: #fff;
  border-bottom-right-radius: 24rpx;
}

.modal-button::after {
  border: none; /* Remove default button borders */
}