/* pages/dashboard/dashboard.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.welcome-section {
  margin-bottom: 40rpx;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
  display: block;
}

.chart-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
}

.radar-chart-container {
  margin-top: 20rpx;
}

.radar-legend {
  display: flex;
  justify-content: flex-end;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.latest-legend {
  color: #3b82f6;
  margin-right: 20rpx;
}

.previous-legend {
  color: #cccccc;
}

.radar-skill-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.skill-name {
  width: 150rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.skill-bar-group {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}

.skill-bar-background {
  height: 20rpx;
  background-color: #eee;
  border-radius: 10rpx;
  position: relative;
  margin-bottom: 10rpx;
}

.skill-bar-background.previous-bar {
  background-color: #f0f0f0;
}

.skill-bar-fill {
  height: 100%;
  border-radius: 10rpx;
  background-color: #3b82f6;
  transition: width 0.5s ease-in-out;
  position: absolute;
  left: 0;
  top: 0;
}

.skill-bar-background.previous-bar .skill-bar-fill {
  background-color: #cccccc;
}

.skill-score {
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.radar-data-text {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
  display: block;
}

.suggestions-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.suggestion-list {
  display: flex;
  flex-direction: column;
}

.suggestion-item {
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #f9f9f9;
  border: 1rpx solid #eee;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

.weui-panel__bd {
  padding: 20rpx;
}

.weui-media-box__title_in-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.weui-media-box__desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.no-suggestions {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 30rpx;
}

.loading-placeholder,
.error-placeholder {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 30rpx;
}

.error-placeholder {
  color: #e64340; /* WeUI 错误红色 */
}
.suggestion-item .weui-panel__bd {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.suggestion-item .weui-media-box__text {
  flex-grow: 1;
}

.action-button-wrapper {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.action-icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}

.suggestion-item.type-interviewing .action-button-wrapper {
  background-color: #f3e8ff;
  color: #6b21a8;
}

.suggestion-item.type-pending .action-button-wrapper {
  background-color: #e0f2fe;
  color: #0369a1;
}

.suggestion-item.type-written_test .action-button-wrapper {
  background-color: #fffbeb;
  color: #a16207;
}
